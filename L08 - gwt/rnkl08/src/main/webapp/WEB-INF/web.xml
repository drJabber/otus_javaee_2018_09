<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>RNK App</display-name>
  <servlet>
    <servlet-name>rnk.l08.Gwtmod GwtRS</servlet-name>
    <servlet-class>rnk.l08.server.GwtRSImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>rnk.l08.Gwtmod AppService</servlet-name>
    <servlet-class>rnk.l08.server.AppServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>rnk.l08.Gwtmod GwtRS</servlet-name>
    <url-pattern>/rnk.l08.Gwtmod/GwtRS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>rnk.l08.Gwtmod AppService</servlet-name>
    <url-pattern>/rnk.l08.Gwtmod/AppService</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/rnk_db</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
