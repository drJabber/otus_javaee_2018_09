<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="res" type="rnk.l08.client.bundle.Resources" />
    <ui:with field="txt" type="rnk.l08.client.bundle.TextResources" />


    <g:VerticalPanel addStyleNames="{res.style.adminpanel}">
        <g:FlowPanel addStyleNames="{res.style.adminpanel}">
                <g:HorizontalPanel ui:field="adminpanelheader">
                    <g:Label text="{txt.adminHeaderLabelText}"></g:Label>
                </g:HorizontalPanel>
        </g:FlowPanel>
        <g:ResizeLayoutPanel>
            <c:DataGrid ui:field='dataGrid' />
        </g:ResizeLayoutPanel>
    </g:VerticalPanel>
</ui:UiBinder>