<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>


    <!--<ui:style>-->
        <!--.dockLayoutPanel > div {-->
            <!--overflow: visible !important;-->
        <!--}-->
    <!--</ui:style>-->

    <ui:with field="res" type="rnk.l08.client.bundle.Resources" />

    <g:HTMLPanel>
        <g:DockLayoutPanel width="100%" height="100%" addStyleNames="{res.style.dockLayoutPanel}">
            <g:north size="30">
                <g:DockLayoutPanel width="100%" height="100%">
                    <g:west size="200">
                        <g:FlowPanel width="100%" height="100%">
                            <g:Label>left  menu</g:Label>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:FlowPanel ui:field="menuPanel" addStyleNames="{res.style.menuPanel}">
                            <g:MenuBar ui:field="menuBar">
                                <g:MenuItem ui:field="menuItemMain">Главная</g:MenuItem>
                                <g:MenuItem ui:field="menuItemContacts">Контакты</g:MenuItem>
                                <g:MenuItem ui:field="menuItemMembers">Участники</g:MenuItem>
                                <g:MenuItem ui:field="menuItemFaq">Вопрос-ответ</g:MenuItem>
                                <g:MenuItem ui:field="menuItemAdmin" visible="false">Админка</g:MenuItem>
                                <g:MenuItem ui:field="menuItemLogin">Войти</g:MenuItem>
                                <g:MenuItem ui:field="menuItemLogout" visible="false">Выйти</g:MenuItem>
                            </g:MenuBar>
                        </g:FlowPanel>
                    </g:center>
                    <g:east size="400">
                        <g:FlowPanel>
                            <g:FormPanel ui:field="formSearch"  >
                                <g:DockLayoutPanel height="100%">
                                    <g:center>
                                        <g:FlowPanel>
                                            <g:TextBox  ui:field="searchBox" name="q"  addStyleNames="{res.style.search_box}"></g:TextBox>
                                        </g:FlowPanel>
                                    </g:center>
                                    <g:east size="30">
                                        <g:SubmitButton  addStyleNames="{res.style.search_btn}"  ></g:SubmitButton>
                                    </g:east>
                                </g:DockLayoutPanel>
                            </g:FormPanel>
                        </g:FlowPanel>
                    </g:east>
                </g:DockLayoutPanel>
            </g:north>
            <g:west size="200">
                <g:FlowPanel visible="true" width="100%"  height="100%" ui:field="mainLeftSideBar">
                    <g:Label>Left side</g:Label>
                </g:FlowPanel>
            </g:west>
            <g:east size="200"  >
                <g:DockLayoutPanel width="100%" height="100%">
                    <g:north size="300">
                        <g:FlowPanel visible="true" width="100%"  height="100%" ui:field="mainCurrenciesSideBar" styleName="{res.style.rightFlowPanel}">
                            <g:FlowPanel width="100%" height="100" >
                                <g:Label>Валюты</g:Label>
                            </g:FlowPanel>
                            <g:FlowPanel width="100%" height="100" >
                                <g:Label>Новости</g:Label>
                            </g:FlowPanel>
                        </g:FlowPanel>

                    </g:north>
                </g:DockLayoutPanel>
            </g:east>
            <g:center>
                <g:FlowPanel width="100%" height="auto">
                    <g:DeckPanel ui:field="deckPanel" addStyleNames="{res.style.mainDeckPanel}">
                    </g:DeckPanel>

                    <g:DockLayoutPanel width="100%" height="300pt" addStyleNames="{res.style.footerPanel}">
                        <g:west size="200">
                            <g:FlowPanel width="100%" height="100%" >
                            </g:FlowPanel>
                        </g:west>
                        <g:center>
                            <g:DockLayoutPanel width="100%" height="100%">
                                <g:west size="600">
                                    <g:FlowPanel width="600pt" height="100%">
                                        <g:Label ui:field="mainAddressPanel">address panel</g:Label>
                                    </g:FlowPanel>
                                </g:west>
                                <g:center>
                                    <g:FlowPanel width="auto" height="100%">
                                        <g:Label ui:field="mainCopirightPanel">copiright panel</g:Label>
                                    </g:FlowPanel>
                                </g:center>
                            </g:DockLayoutPanel>
                        </g:center>
                        <g:east size="300">
                            <g:FlowPanel width="100%" height="100%" >
                            </g:FlowPanel>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:FlowPanel>
            </g:center>

            <!--<g:south size="300" >-->
            <!--</g:south>-->

        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>