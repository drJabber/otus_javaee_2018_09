<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>RnK</display-name>

    <context-param>
        <param-name>rnk-storage-path</param-name>
        <param-value>/opt/tomcat/bin/xml</param-value>
    </context-param>
    <context-param>
        <param-name>restore-at-startup</param-name>
        <param-value>Y</param-value>
    </context-param>

    <servlet>
        <servlet-name>Main-servlet</servlet-name>
        <servlet-class>rnk.l10.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main-servlet</servlet-name>
        <url-pattern>/rnk</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Invalid browser</servlet-name>
        <jsp-file>/WEB-INF/browser-invalid.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Invalid browser</servlet-name>
        <url-pattern>/browser-invalid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Main page</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main page</servlet-name>
        <url-pattern>/main/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Startup-servlet</servlet-name>
        <servlet-class>rnk.l10.startup.StartupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Startup-servlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>User-Agent filter</filter-name>
        <filter-class>rnk.l10.UserAgentFilter</filter-class>
        <init-param>
            <param-name>user-agent-msie</param-name>
            <param-value>10</param-value>
        </init-param>
        <init-param>
            <param-name>user-agent-firefox</param-name>
            <param-value>45</param-value>
        </init-param>
        <init-param>
            <param-name>user-agent-chrome</param-name>
            <param-value>50</param-value>
        </init-param>
        <init-param>
            <param-name>user-agent-opera</param-name>
            <param-value>38</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>User-Agent filter</filter-name>
        <servlet-name>Main-servlet</servlet-name>
    </filter-mapping>


    <security-constraint>
        <web-resource-collection>
        <web-resource-name>Админка</web-resource-name>
        <url-pattern>/main/admin</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
        <form-login-page>/WEB-INF/login</form-login-page>
        <form-error-page>/WEB-INF/loginerror</form-error-page>
        </form-login-config>
    </login-config>



    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.html</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>


    <resource-ref>
        <description>db connection</description>
        <res-ref-name>jdbc/rnk_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
